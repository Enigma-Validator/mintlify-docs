        "type": "object",
        "title": "APIResponse",
        "description": "Generic API response",
        "properties": {
          "success": {
            "type": "boolean",
            "title": "Success",
            "default": true
          },
          "message": {
            "type": "string",
            "title": "Message",
            "default": "OK"
          },
          "data": {
            "title": "Data"
          },
          "total_count": {
