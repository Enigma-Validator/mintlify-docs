{
  "openapi": "3.0.3",
  "info": {
    "title": "HL Indexer API",
    "version": "1.0.0",
    "description": "API to query indexed Hyperliquid trading data.\n\nThis API provides access to stored/indexed trading data:\n- **Fills**: Executed orders and fills (Spot-only or All = Spot + Perp)\n- **Analytics**: Aggregations and statistics based on indexed data\n- **Completed Trades**: Trade objects and their related fills\n- **Users**: User overviews, performance and activity\n\n> Note: No live streaming. Responses are computed from indexed data.\n"
  },
  "servers": [
    {
      "url": "https://api-eu.hypedexer.com",
      "description": "EU production"
    }
  ],
  "tags": [
    {
      "name": "API",
      "description": "General endpoints and shared response format."
    },
    {
      "name": "Fills",
      "description": "Fills endpoints. `/fills/` = All (Spot + Perp). `/fills/spot/` = Spot only."
    },
    {
      "name": "Analytics",
      "description": "Aggregations, KPIs, and statistical endpoints based on indexed data."
    },
    {
      "name": "Completed Trades",
      "description": "Completed trades and related resources."
    },
    {
      "name": "Users",
      "description": "User profiles, performance, coins, and leaderboards."
    }
  ],
  "paths": {
    "/fills/": {
      "get": {
        "tags": [
          "Fills"
        ],
        "summary": "List fills (All = Spot + Perp)",
        "description": "Returns fills across Spot and Perp.",
        "parameters": [
          {
            "name": "start_time",
            "in": "query",
            "description": "ISO 8601 UTC start time (e.g. 2025-10-08T00:00:00Z)",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "end_time",
            "in": "query",
            "description": "ISO 8601 UTC end time",
            "schema": {
              "type": "string",
              "format": "date-time"
            }
          },
          {
            "name": "coin",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Max items to return",
            "schema": {
              "type": "integer",
              "minimum": 1,
              "maximum": 1000,
              "default": 100
            }
          },
          {
            "name": "cursor",
            "in": "query",
            "description": "Pagination cursor",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          }
        }
      }
    },
    "/fills/recent": {
      "get": {
        "tags": [
          "Fills"
        ],
        "summary": "Get Fills Recent",
        "description": "Recent fills (live table, 24h TTL) â€” same filters as `/fills`,\nfaster responses for the recent time window.",
        "operationId": "get_fills_recent_fills_recent_get",
        "parameters": [
          {
            "name": "user",
            "in": "query",
            "description": "User address",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "coin",
            "in": "query",
            "description": "Coin symbol",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "side",
            "in": "query",
            "description": "Side (B=Buy, A=Sell)",
            "schema": {
              "$ref": "#/components/schemas/SideEnum"
            }
          },
          {
            "name": "size_usd",
            "in": "query",
            "description": "Minimum notional amount (sz * px) in USD",
            "schema": {
              "type": "number",
              "minimum": 0,
              "nullable": true
            }
          },
          {
            "name": "start_time",
            "in": "query",
            "description": "Start time (ISO UTC)",
            "schema": {
              "type": "string",
              "format": "date-time",
              "nullable": true
            }
          },
          {
            "name": "end_time",
            "in": "query",
            "description": "End time (ISO UTC)",
            "schema": {
              "type": "string",
              "format": "date-time",
              "nullable": true
            }
          },
          {
            "name": "offset",
            "in": "query",
            "description": "Pagination offset (deprecated, prefer cursor)",
            "deprecated": true,
            "schema": {
              "type": "integer",
              "minimum": 0,
              "default": 0
            }
          },
          {
            "name": "limit",
            "in": "query",
            "description": "Max results (cap 1000; None = unlimited). To request more than 100 results, use an external client.",
            "schema": {
              "type": "integer",
              "maximum": 1000,
              "minimum": 1,
              "default": 100,
              "nullable": true
            }
          },
          {
            "name": "cursor",
            "in": "query",
            "description": "Keyset cursor: '<time_ms>:<tid>'",
            "schema": {
              "type": "string",
              "nullable": true
            }
          },
          {
            "name": "order",
            "in": "query",
            "description": "Sort by time: ASC or DESC",
            "schema": {
              "type": "string",
              "pattern": "^(?i)(ASC|DESC)$",
              "default": "DESC"
            }
          },
          {
            "name": "X-API-Key",
            "in": "header",
            "description": "API key for authentication (required by Cloudflare)",
            "schema": {
              "type": "string",
              "nullable": true
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/APIResponse"
                }
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        }
      }
    },
