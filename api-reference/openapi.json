            "type": "integer",
            "nullable": true
          },
          "execution_time_ms": {
            "title": "Execution Time Ms",
            "type": "number",
            "nullable": true
          }
        }
      },
      "SideEnum": {
        "type": "string",
        "enum": [
          "B",
          "A"
        ],
        "title": "SideEnum",
        "description": "Trade/fill sides"
      },
      "HTTPValidationError": {
        "type": "object",
        "title": "HTTPValidationError",
        "properties": {
          "detail": {
            "type": "array",
            "title": "Detail",
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            }
          }
        }
      },
      "ValidationError": {
        "type": "object",
        "title": "ValidationError",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "properties": {
          "loc": {
            "type": "array",
            "title": "Location",
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            }
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        }
      }
    }
  },
